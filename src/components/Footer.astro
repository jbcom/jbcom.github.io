---
const currentYear = new Date().getFullYear()

const footerLinks = [
  {
    label: 'GitHub',
    href: 'https://github.com/jbcom',
    ariaLabel: 'GitHub profile (opens in new tab)',
  },
  {
    label: 'LinkedIn',
    href: 'https://linkedin.com/in/jonbogaty',
    ariaLabel: 'LinkedIn profile (opens in new tab)',
  },
  {
    label: 'Telegram',
    href: 'https://t.me/jbpersonaldev',
    ariaLabel: 'Telegram (opens in new tab)',
  },
  {
    label: 'Email',
    href: 'mailto:jon@jonbogaty.com',
    ariaLabel: 'Send email to jon@jonbogaty.com',
  },
]
---

<footer>
  <div class="footer-content">
    <div class="footer-links">
      {
        footerLinks.map((link) => (
          <a
            href={link.href}
            aria-label={link.ariaLabel}
            {...(link.href.startsWith("http") || link.href.startsWith("https")
              ? { target: "_blank", rel: "noopener noreferrer" }
              : {})}
          >
            {link.label}
          </a>
        ))
      }
    </div>
    <p class="footer-copyright">
      &copy; {currentYear} jbcom. All rights reserved.
    </p>
  </div>
</footer>

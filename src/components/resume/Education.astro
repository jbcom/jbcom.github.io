---
import { formatDateRange } from '../../lib/dates'

interface EducationItem {
  institution: string
  area: string
  studyType: string
  startDate: string
  endDate?: string | null
  honors?: string[]
}

interface Props {
  education: EducationItem[]
}

const { education } = Astro.props
---

<section class="education-section" aria-labelledby="education-heading">
  <h2 id="education-heading" class="section-title">Education</h2>

  {education.map((edu) => (
    <div class="card education-card">
      <div class="edu-header">
        <div>
          <h3 class="degree">{edu.studyType} &mdash; {edu.area}</h3>
          <p class="institution">{edu.institution}</p>
        </div>
        <span class="date-range">{formatDateRange(edu.startDate, edu.endDate)}</span>
      </div>

      {edu.honors && edu.honors.length > 0 && (
        <div class="honors">
          {edu.honors.map((honor) => (
            <span class="honor-chip">{honor}</span>
          ))}
        </div>
      )}
    </div>
  ))}
</section>

<style>
  .education-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .card {
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .education-card {
    margin-bottom: 1rem;
  }

  .education-card:last-child {
    margin-bottom: 0;
  }

  .edu-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .degree {
    font-family: var(--font-heading);
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.2rem;
  }

  .institution {
    font-family: var(--font-body);
    font-size: 0.92rem;
    color: var(--primary);
    margin: 0;
    font-weight: 500;
  }

  .date-range {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-disabled);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .honors {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.85rem;
  }

  .honor-chip {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.78rem;
    font-weight: 500;
    color: var(--success);
    background: color-mix(in srgb, var(--success) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--success) 25%, transparent);
    border-radius: 9999px;
    padding: 0.25rem 0.75rem;
    white-space: nowrap;
  }

  @media (max-width: 600px) {
    .edu-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .date-range {
      order: -1;
    }
  }
</style>

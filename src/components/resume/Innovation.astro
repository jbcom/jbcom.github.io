---
interface InnovationItem {
  year: string
  title: string
  description: string
}

interface Props {
  items: InnovationItem[]
}

const { items } = Astro.props
---

<section class="innovation-section" aria-labelledby="innovation-heading">
  <h2 id="innovation-heading" class="section-title">Innovation & Technology Leadership</h2>
  <div class="card">
    <div class="timeline">
      {items.map((item) => (
        <div class="timeline-item">
          <div class="timeline-marker" aria-hidden="true"></div>
          <div class="timeline-content">
            <span class="year">{item.year}</span>
            <strong class="title">{item.title}</strong>
            <span class="dash" aria-hidden="true"> &mdash; </span>
            <span class="description">{item.description}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .innovation-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .card {
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .timeline::before {
    content: "";
    position: absolute;
    left: 0.35rem;
    top: 0.5rem;
    bottom: 0.5rem;
    width: 2px;
    background: color-mix(in srgb, var(--primary) 30%, transparent);
    border-radius: 1px;
  }

  .timeline-item {
    position: relative;
    display: flex;
    align-items: flex-start;
  }

  .timeline-marker {
    position: absolute;
    left: -1.5rem;
    top: 0.45rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--primary);
    border: 2px solid var(--bg-paper);
    z-index: 1;
    flex-shrink: 0;
  }

  .timeline-content {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .year {
    font-family: var(--font-mono);
    font-size: 0.82rem;
    font-weight: 700;
    color: var(--primary);
    margin-right: 0.5rem;
  }

  .title {
    color: var(--text-primary);
    font-weight: 600;
  }

  .dash {
    color: var(--text-disabled);
  }

  .description {
    color: var(--text-secondary);
  }

  @media (max-width: 600px) {
    .timeline-content {
      font-size: 0.85rem;
    }
  }
</style>

---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Google Fonts preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <!--
      ALL print styles inlined for Puppeteer reliability.
      External CSS can fail in headless Chrome PDF generation.
    -->
    <style>
      @page {
        size: letter;
        margin: 0.4in 0.5in;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 10pt;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }

      body {
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, sans-serif;
        background: #fff;
        color: #000;
        line-height: 1.45;
        margin: 0;
        padding: 0;
      }

      /* Hide non-print elements */
      header,
      nav,
      footer,
      .no-print,
      .download-bar,
      .skip-link {
        display: none !important;
      }

      /* Typography */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Space Grotesk", -apple-system, BlinkMacSystemFont,
          "Segoe UI", sans-serif;
        color: #000;
        line-height: 1.2;
        page-break-after: avoid;
      }

      h1 {
        font-size: 22pt;
        font-weight: 700;
        letter-spacing: -0.02em;
        margin: 0 0 4pt;
      }

      h2 {
        font-size: 13pt;
        font-weight: 700;
        letter-spacing: -0.01em;
        margin: 10pt 0 4pt;
        padding-bottom: 2pt;
        border-bottom: 1.5pt solid #06b6d4;
      }

      h3 {
        font-size: 11pt;
        font-weight: 600;
        margin: 0 0 2pt;
      }

      h4 {
        font-size: 10pt;
        font-weight: 600;
        margin: 0 0 2pt;
      }

      p {
        font-size: 10pt;
        margin: 0 0 4pt;
      }

      a {
        color: #000;
        text-decoration: none;
      }

      /* Lists */
      ul,
      ol {
        font-size: 9.5pt;
        padding-left: 14pt;
        margin: 0 0 4pt;
      }

      li {
        margin-bottom: 1.5pt;
        line-height: 1.4;
      }

      /* Resume sections */
      .resume-section {
        margin-bottom: 6pt;
        page-break-inside: avoid;
      }

      .job-entry {
        margin-bottom: 8pt;
        page-break-inside: avoid;
      }

      .job-title {
        font-size: 11pt;
        font-weight: 600;
        margin-bottom: 0;
        color: #000;
      }

      .company {
        font-size: 10pt;
        font-weight: 600;
        color: #06b6d4;
        margin-bottom: 0;
      }

      .period {
        font-size: 9pt;
        color: #6b7280;
        font-style: italic;
        margin-bottom: 3pt;
      }

      .job-description {
        margin: 0;
        padding-left: 14pt;
      }

      .job-description li {
        font-size: 9.5pt;
        margin-bottom: 1.5pt;
        color: #000;
        line-height: 1.4;
      }

      /* Summary / contact header */
      .resume-header {
        margin-bottom: 6pt;
        text-align: center;
      }

      .resume-header h1 {
        margin-bottom: 2pt;
      }

      .resume-contact {
        font-size: 9pt;
        color: #6b7280;
        margin-bottom: 4pt;
      }

      .resume-contact a {
        color: #06b6d4;
      }

      .resume-summary {
        font-size: 10pt;
        line-height: 1.45;
        margin-bottom: 6pt;
      }

      /* Competencies: compact flex grid */
      .competencies {
        display: flex;
        flex-wrap: wrap;
        gap: 4pt 12pt;
        margin-bottom: 6pt;
      }

      .competency-item {
        font-size: 9.5pt;
        line-height: 1.4;
        white-space: nowrap;
      }

      .competency-category {
        font-weight: 600;
        font-size: 10pt;
        margin-bottom: 2pt;
      }

      /* Skills: row layout */
      .skills-section {
        margin-bottom: 6pt;
      }

      .skill-row {
        display: flex;
        gap: 6pt;
        margin-bottom: 2pt;
        font-size: 9.5pt;
        line-height: 1.4;
      }

      .skill-label {
        font-weight: 600;
        white-space: nowrap;
        min-width: 100pt;
      }

      .skill-value {
        color: #374151;
      }

      /* Education */
      .education-entry {
        margin-bottom: 4pt;
      }

      /* Chips in print */
      .chip {
        font-size: 8pt;
        border: 0.5pt solid #d1d5db;
        padding: 0 4pt;
        border-radius: 2pt;
        color: #374151;
        background: transparent;
      }

      /* Page break helpers */
      .page-break-before {
        page-break-before: always;
      }

      .page-break-after {
        page-break-after: always;
      }

      .no-break {
        page-break-inside: avoid;
      }

      /* Container override: full width in print */
      .container,
      .container-wide {
        max-width: 100%;
        padding: 0;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

---
import BaseLayout from '../layouts/BaseLayout.astro'

const contactMethods = [
  {
    badge: 'GH',
    title: 'GitHub',
    description: 'Open source projects and contributions',
    href: 'https://github.com/jbcom',
    external: true,
  },
  {
    badge: 'LI',
    title: 'LinkedIn',
    description: 'Professional profile and network',
    href: 'https://linkedin.com/in/jonbogaty',
    external: true,
  },
  {
    badge: 'TG',
    title: 'Telegram',
    description: 'Quick messages and conversations',
    href: 'https://t.me/jbpersonaldev',
    external: true,
  },
  {
    badge: '@',
    title: 'Email',
    description: 'jon@jonbogaty.com',
    href: 'mailto:jon@jonbogaty.com',
    external: false,
  },
]
---

<BaseLayout
  title="Contact"
  description="Get in touch with Jon Bogaty. Reach out via GitHub, LinkedIn, Telegram, or email for engineering leadership, open source collaboration, or consulting."
>
  <div class="container">
    <!-- Page Header -->
    <header class="page-header" aria-labelledby="contact-heading">
      <p class="overline">Get In Touch</p>
      <h1 id="contact-heading" class="page-heading">Let's Connect</h1>
      <p class="page-subtitle">
        Whether you're looking for a senior engineering leader, want to
        collaborate on open source, or just want to chat about infrastructure
        and AI.
      </p>
    </header>

    <!-- Contact Cards Grid -->
    <section class="contact-grid-section" aria-label="Contact methods">
      <div class="contact-grid">
        {contactMethods.map((method) => (
          <a
            href={method.href}
            class="contact-card"
            {...(method.external
              ? { target: '_blank', rel: 'noopener noreferrer' }
              : {})}
          >
            <span class="contact-badge" aria-hidden="true">
              {method.badge}
            </span>
            <h2 class="contact-title">{method.title}</h2>
            <p class="contact-description">{method.description}</p>
          </a>
        ))}
      </div>
    </section>

    <!-- Location Section -->
    <section class="location-section" aria-label="Location">
      <p class="location-text">Based in Lincoln, NE</p>
      <p class="location-subtext">Open to remote opportunities worldwide</p>
    </section>

    <!-- Resume Download CTA -->
    <section class="resume-cta" aria-labelledby="resume-cta-heading">
      <h2 id="resume-cta-heading" class="cta-heading">Want the Full Picture?</h2>
      <div class="cta-actions">
        <a href="/Jon_Bogaty_Resume.pdf" class="btn btn-primary" download>
          Download PDF
        </a>
        <a href="/Jon_Bogaty_Resume.docx" class="btn btn-outlined" download>
          Download DOCX
        </a>
      </div>
      <a href="/resume/" class="resume-link">
        Or view the interactive resume &rarr;
      </a>
    </section>
  </div>
</BaseLayout>

<style>
  /* -- Page Header -------------------------------------------------------- */
  .page-header {
    text-align: center;
    padding: var(--space-3xl) 0 var(--space-2xl);
  }

  .page-heading {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 400;
    color: var(--text-primary);
    margin: var(--space-sm) 0 var(--space-md);
    letter-spacing: -0.02em;
  }

  .page-subtitle {
    font-family: var(--font-body);
    font-size: 1.05rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  /* -- Contact Cards Grid ------------------------------------------------- */
  .contact-grid-section {
    padding-bottom: var(--space-2xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
    max-width: 720px;
    margin: 0 auto;
  }

  .contact-card {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    text-decoration: none;
    transition:
      border-color 0.2s ease,
      transform 0.2s ease;
  }

  .contact-card:hover {
    border-color: var(--brand);
    transform: translateY(-2px);
  }

  .contact-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: var(--radius-md);
    background: var(--brand-dim);
    color: var(--brand);
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 500;
    flex-shrink: 0;
  }

  .contact-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0;
  }

  .contact-description {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  /* -- Location Section --------------------------------------------------- */
  .location-section {
    text-align: center;
    padding: var(--space-xl) 0 var(--space-2xl);
    border-top: 1px solid var(--border);
  }

  .location-text {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--space-xs);
  }

  .location-subtext {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin: 0;
  }

  /* -- Resume CTA --------------------------------------------------------- */
  .resume-cta {
    text-align: center;
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl) var(--space-lg);
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
  }

  .cta-heading {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-primary);
    margin: 0 0 var(--space-lg);
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
  }

  .resume-link {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--brand);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .resume-link:hover {
    color: var(--brand-light);
  }

  /* -- Responsive --------------------------------------------------------- */
  @media (max-width: 600px) {
    .page-heading {
      font-size: 1.75rem;
    }

    .page-subtitle {
      font-size: 0.95rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .cta-actions .btn {
      width: 100%;
      max-width: 260px;
    }
  }
</style>

---
import BaseLayout from '../layouts/BaseLayout.astro'

const skills = [
  {
    category: 'Cloud Platforms',
    tags: ['AWS', 'GCP', 'Azure', 'Cloudflare'],
  },
  {
    category: 'Infrastructure & DevOps',
    tags: ['Terraform', 'Kubernetes', 'Docker', 'Ansible', 'CI/CD', 'GitOps'],
  },
  {
    category: 'Programming',
    tags: ['Python', 'TypeScript', 'Go', 'Bash', 'SQL'],
  },
  {
    category: 'Security',
    tags: ['HashiCorp Vault', 'SOPS', 'IAM', 'Zero Trust', 'SOC 2', 'ISO 27001'],
  },
  {
    category: 'AI & Agents',
    tags: ['LangChain', 'CrewAI', 'LangGraph', 'Strands', 'RAG', 'MCP'],
  },
]

const experience = [
  {
    title: 'Head of IT & Security',
    company: 'Flipside Crypto',
    period: 'June 2021 -- Jan 2026',
    description:
      'Led IT and security for a data analytics company in the Web3 space. Built and managed the AI team, implementing agent orchestration systems that automated operational workflows. Oversaw cloud infrastructure, security compliance (SOC 2), and vendor management across AWS and GCP.',
  },
  {
    title: 'Sr. Site Reliability Engineer',
    company: 'GoHealth',
    period: 'Aug 2020 -- June 2021',
    description:
      'Engineered reliability solutions for high-traffic health insurance marketplace. Designed monitoring and incident response systems, implemented infrastructure-as-code practices, and reduced deployment times by 60%.',
  },
  {
    title: 'Sr. DevOps Engineer',
    company: 'Symbiont',
    period: 'Nov 2017 -- Aug 2020',
    description:
      'Built cloud infrastructure for a blockchain-based smart contracts platform. Designed secure deployment pipelines, managed Kubernetes clusters, and implemented secrets management with HashiCorp Vault.',
  },
  {
    title: 'Open Source Maintainer',
    company: 'jbcom',
    period: '2017 -- Present',
    description:
      'Maintaining a growing ecosystem of production-grade open source packages spanning AI orchestration, game development, infrastructure automation, and developer tools.',
  },
]
---

<BaseLayout
  title="About - Jon Bogaty"
  description="DevOps & Platform Engineering Leader with 15+ years of experience in infrastructure, security, and AI innovation."
>
  <!-- Header -->
  <header class="profile-header" aria-labelledby="profile-name">
    <div class="avatar" aria-hidden="true">JB</div>
    <h1 id="profile-name" class="profile-name">Jon Bogaty</h1>
    <p class="profile-subtitle">
      DevOps & Platform Engineering Leader | AI Innovation Architect
    </p>
    <p class="profile-location">Lincoln, NE</p>
    <nav class="profile-links" aria-label="Social and contact links">
      <a
        href="https://github.com/jbcom"
        class="social-link"
        target="_blank"
        rel="noopener noreferrer"
      >
        GitHub
      </a>
      <a
        href="https://linkedin.com/in/jonbogaty"
        class="social-link"
        target="_blank"
        rel="noopener noreferrer"
      >
        LinkedIn
      </a>
      <a href="mailto:jon@jonbogaty.com" class="social-link">
        Email
      </a>
    </nav>
    <a href="/resume/" class="btn btn-outline">Full Resume</a>
  </header>

  <!-- Bio -->
  <section class="section" aria-labelledby="bio-heading">
    <div class="card bio-card">
      <h2 id="bio-heading" class="card-title">About</h2>
      <p class="bio-text">
        Senior technology leader with 15+ years spanning DevOps, SRE, platform
        engineering, and security operations. Currently focused on the
        intersection of AI agent orchestration and production infrastructure --
        building systems where intelligent agents manage, monitor, and optimize
        real-world deployments.
      </p>
      <p class="bio-text">
        At Flipside Crypto, built and led the AI team that implemented agent
        orchestration systems automating operational workflows across IT,
        security, and data operations. This hands-on experience with
        enterprise-scale AI deployment directly informs the open source
        ecosystem -- every package is production-tested in demanding
        environments before release.
      </p>
    </div>
  </section>

  <!-- Two-Column Layout: Experience + Skills -->
  <div class="two-col">
    <!-- Experience Timeline -->
    <section class="section experience-col" aria-labelledby="experience-heading">
      <h2 id="experience-heading" class="section-heading">Experience</h2>
      <div class="timeline">
        {experience.map((job, i) => (
          <div class="timeline-entry">
            <div class="timeline-track" aria-hidden="true">
              <span class="timeline-dot"></span>
              {i < experience.length - 1 && <span class="timeline-line"></span>}
            </div>
            <div class="timeline-content">
              <h3 class="job-title">{job.title}</h3>
              <p class="job-company">{job.company}</p>
              <span class="job-period">{job.period}</span>
              <p class="job-description">{job.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills Sidebar -->
    <aside class="section skills-col" aria-labelledby="skills-heading">
      <h2 id="skills-heading" class="section-heading">Skills</h2>
      <div class="skills-list">
        {skills.map((group) => (
          <div class="skill-group">
            <h3 class="skill-category">{group.category}</h3>
            <div class="skill-tags">
              {group.tags.map((tag) => (
                <span class="skill-tag">{tag}</span>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Education -->
      <div class="education-block">
        <h3 class="skill-category">Education</h3>
        <p class="edu-degree">AAS, Computer Information Technology</p>
        <p class="edu-school">Ivy Tech Community College</p>
        <div class="skill-tags">
          <span class="skill-tag">Honors</span>
          <span class="skill-tag">Dean's List</span>
        </div>
      </div>
    </aside>
  </div>

  <!-- CTA -->
  <section class="section" aria-labelledby="cta-heading">
    <div class="card cta-card">
      <h2 id="cta-heading" class="cta-title">Want the full details?</h2>
      <p class="cta-text">
        View the complete resume with detailed project highlights and technical achievements.
      </p>
      <div class="cta-actions">
        <a href="/resume/" class="btn btn-primary">View Full Resume</a>
        <a href="/Jon_Bogaty_Resume.pdf" class="btn btn-secondary" download>Download PDF</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ── Profile Header ─────────────────────────────────────────────────── */
  .profile-header {
    text-align: center;
    padding: 3rem 0 2.5rem;
  }

  .avatar {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
  }

  .profile-name {
    font-family: var(--font-heading);
    font-size: 2.25rem;
    font-weight: 800;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
    letter-spacing: -0.02em;
  }

  .profile-subtitle {
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0 0 0.4rem;
    line-height: 1.5;
  }

  .profile-location {
    font-family: var(--font-body);
    font-size: 0.88rem;
    color: var(--text-disabled);
    margin: 0 0 1.25rem;
  }

  .profile-links {
    display: flex;
    justify-content: center;
    gap: 1.25rem;
    flex-wrap: wrap;
    margin-bottom: 1.25rem;
  }

  .social-link {
    font-family: var(--font-body);
    font-size: 0.88rem;
    font-weight: 500;
    color: var(--primary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .social-link:hover {
    color: color-mix(in srgb, var(--primary) 75%, white);
    text-decoration: underline;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.65rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s ease, color 0.2s ease, border-color 0.2s ease;
  }

  .btn-outline {
    background: transparent;
    color: var(--primary);
    border: 1px solid var(--primary);
  }

  .btn-outline:hover {
    background: color-mix(in srgb, var(--primary) 10%, transparent);
  }

  .btn-primary {
    background: var(--primary);
    color: var(--bg-default);
  }

  .btn-primary:hover {
    background: color-mix(in srgb, var(--primary) 85%, white);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  /* ── Shared ─────────────────────────────────────────────────────────── */
  .section {
    margin-bottom: 2.5rem;
  }

  .section-heading {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .card {
    background: var(--bg-paper);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
  }

  .card-title {
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.75rem;
  }

  /* ── Bio ─────────────────────────────────────────────────────────────── */
  .bio-card {
    max-width: 800px;
    margin: 0 auto;
  }

  .bio-text {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.75;
    margin: 0 0 1rem;
  }

  .bio-text:last-child {
    margin-bottom: 0;
  }

  /* ── Two-Column Layout ──────────────────────────────────────────────── */
  .two-col {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 2rem;
    align-items: start;
  }

  /* ── Experience Timeline ────────────────────────────────────────────── */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .timeline-entry {
    display: grid;
    grid-template-columns: 24px 1fr;
    gap: 1rem;
    min-height: 0;
  }

  .timeline-track {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding-top: 0.35rem;
  }

  .timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--primary);
    border: 2px solid var(--bg-default);
    flex-shrink: 0;
    z-index: 1;
  }

  .timeline-line {
    width: 2px;
    flex-grow: 1;
    background: color-mix(in srgb, var(--primary) 25%, transparent);
    margin-top: 4px;
  }

  .timeline-content {
    padding-bottom: 1.75rem;
  }

  .timeline-entry:last-child .timeline-content {
    padding-bottom: 0;
  }

  .job-title {
    font-family: var(--font-heading);
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.15rem;
  }

  .job-company {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--primary);
    margin: 0 0 0.25rem;
  }

  .job-period {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    color: var(--text-disabled);
    display: block;
    margin-bottom: 0.6rem;
  }

  .job-description {
    font-family: var(--font-body);
    font-size: 0.88rem;
    color: var(--text-secondary);
    line-height: 1.65;
    margin: 0;
  }

  /* ── Skills Sidebar ─────────────────────────────────────────────────── */
  .skills-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .skill-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skill-category {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .skill-tag {
    font-family: var(--font-body);
    font-size: 0.78rem;
    font-weight: 500;
    color: var(--primary);
    background: color-mix(in srgb, var(--primary) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--primary) 25%, transparent);
    border-radius: 9999px;
    padding: 0.25rem 0.7rem;
    white-space: nowrap;
  }

  /* ── Education ──────────────────────────────────────────────────────── */
  .education-block {
    padding-top: 1.25rem;
    border-top: 1px solid var(--border);
  }

  .edu-degree {
    font-family: var(--font-body);
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0.5rem 0 0.15rem;
  }

  .edu-school {
    font-family: var(--font-body);
    font-size: 0.82rem;
    color: var(--text-secondary);
    margin: 0 0 0.6rem;
  }

  /* ── CTA Card ───────────────────────────────────────────────────────── */
  .cta-card {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .cta-text {
    font-family: var(--font-body);
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1.25rem;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* ── Responsive ─────────────────────────────────────────────────────── */
  @media (max-width: 850px) {
    .two-col {
      grid-template-columns: 1fr;
    }

    .skills-col {
      order: 2;
    }
  }

  @media (max-width: 480px) {
    .profile-name {
      font-size: 1.75rem;
    }

    .profile-links {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 260px;
    }
  }
</style>

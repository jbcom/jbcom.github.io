{
  "name": "jbcom.github.io",
  "version": "1.0.1",
  "description": "Jon Bogaty's professional portfolio and jbcom ecosystem showcase",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "prebuild": "pnpm generate:resume",
    "preview": "vite preview",
    "generate:resume": "pnpm generate:resume:docx && pnpm generate:resume:pdf",
    "generate:resume:docx": "tsx scripts/generate-resume-docx.ts",
    "generate:resume:pdf": "tsx scripts/generate-resume-pdf.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@paper-design/shaders-react": "^0.0.71",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.2.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "docx": "^9.6.0",
    "playwright": "^1.58.2",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "homepage": "https://jbcom.github.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbcom/jbcom.github.io.git"
  },
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "keywords": [
    "portfolio",
    "jbcom",
    "vite",
    "react",
    "shadcn",
    "github-pages",
    "resume"
  ]
}
